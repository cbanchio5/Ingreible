  <div class="jumbotron">
      <div class="row ">


 <div class="col-sm-12 col-md-12 col-lg-12">
            <%= cl_image_tag @recipe.photo.key,   crop: :fill, class: "" %>
          </div>


      </div>
    </div>
  </div>
</div>
