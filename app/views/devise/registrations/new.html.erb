<div class="container sign-in mt-5">
  <div class="header--section mb-4">
    <h2 class="fw-semibold fs-1">Create an account</h2>
    <p class="small--text">Let's help you set up an account. It won't take long!</p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "gray-border-rounded" },
                  :label_html => { :class => 'fs-6' }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "gray-border-rounded" },
                  :label_html => { :class => 'fs-6' } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "gray-border-rounded mb-3" },
                  :label_html => { :class => 'fs-6' } %>
    </div>

    <div class="form-actions mt-5">
      <%= f.button :submit, "Sign up", class: "btn btn-primary mt-3 mb-3 text-white w-100 mb-5" %>
    </div>
  <% end %>




</div>
