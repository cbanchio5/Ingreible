<div class="container">

  <h1 class="text-black"><%=@community.name  %></h1>
  <% @messages.each do |message| %>
        <div class="media text-muted pt-3">
          <img  alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="https://cdn-icons-png.flaticon.com/512/190/190673.png?w=360">
            username: <%= message.user.fullname%>

        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <%= message.message %>
            <%= message.created_at.strftime('%m/%d/%Y')  %>
        </p>
        <%= link_to "Delete", message_path(message), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>

        </div>
        <% end %>

        </div>
  <%= simple_form_for [@community, @message] do |f| %>
    <%= f.input :message, label: 'Insert your message' %>
    <%= f.button :submit, "Leave a Message", class: "btn btn-primary" %>
  <% end %>
</div>
