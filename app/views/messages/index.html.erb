<div class="container">

  <h1 class="text-black"><%=@community.name  %></h1>
   <%= link_to "Leave", community_membership_path(current_user.id, @membership.id), class:"btn btn-sm btn-outline-secondary m-1 border-0", method: :delete, data: { confirm: 'Are you sure?' } %>
  <% @messages.each do |message| %>
        <div class="media text-muted pt-3">
            <% if message.user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key , class: "mr-2 rounded", 'aria-haspopup': true, 'aria-expanded': false, size: "32x32" %>
            <% else %>
             <%= image_tag "https://cdn-icons-png.flaticon.com/512/190/190673.png?w=360", class: "mr-2 rounded", 'aria-haspopup': true, 'aria-expanded': false, size: "32x32" %>
            <% end %>
          <%# <img  class="mr-2 rounded" style="width: 32px; height: 32px;" src="https://cdn-icons-png.flaticon.com/512/190/190673.png?w=360"> %>
            username: <%= message.user.fullname%>

        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <%= message.message %>
            <%= message.created_at.strftime('%m/%d/%Y')  %>
        </p>
        <%= link_to "Delete", message_path(message), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>

        </div>
        <% end %>

        </div>
  <%= simple_form_for [@community, @message] do |f| %>
    <%= f.input :message, label: 'Insert your message' %>
    <%= f.button :submit, "Leave a Message", class: "btn btn-primary" %>
  <% end %>
</div>
